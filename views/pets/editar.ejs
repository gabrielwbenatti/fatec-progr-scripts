<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            Editar Cliente 
        </div>
        <div class="card-body">
            <form method="post" action="/customers/alterar">
                <input type="hidden" name="id" value="<%= customer.id %>">
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        name="nome"
                        id="nome"
                        class="form-control"
                        placeholder="Nome"
                        required
                        value="<%= customer.nome %>"
                    >
                    <label for="nome">Nome</label>
                </div>
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        name="sobrenome"
                        id="sobrenome"
                        class="form-control"
                        placeholder="Sobrenome do Cliente"
                        required
                        value="<%= customer.sobrenome %>"
                    >
                    <label for="nome">Sobrenome</label>
                </div>
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        name="cpf"
                        id="cpf"
                        class="form-control"
                        placeholder="CPF"
                        required
                        value="<%= customer.cpf %>"
                    >
                    <label for="nome">CPF</label>
                </div>
                <div class="form-floating mb-3">
                    <input 
                        type="tel" 
                        name="telefone"
                        id="telefone"
                        class="form-control"
                        placeholder="Telefone"
                        required
                        value="<%= customer.telefone %>"
                    >
                    <label for="nome">Telefone</label>
                </div>
                <div class="form-floating mb-3">
                    <button type="submit" class="btn btn-primary">Alterar</button>
                    <a href="/customers" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>