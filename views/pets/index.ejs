<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <a href="/pets/novo" class="btn btn-primary">Novo Pet</a>
    <br>
    <div class="card">
        <div class="card-header">
            Pets Cadastrados
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <th>Nome do Pet</th>
                    <th>Esp√©cie</th>
                    <!-- <th>Nome do Cliente</th> -->
                </thead>
                <tbody>
                    <% pets.forEach(pet => { %>
                        <tr>
                            <td><%= pet.nome %></td>
                            <td><%= pet.especie %></td>
                          
                            <td>
                                <a 
                                    href="/pets/editar/<%= pet.id %>" 
                                    class="btn btn-primary"
                                >Editar</a>
                                <a 
                                    href="/pets/excluir/<%= pet.id %>" 
                                    class="btn btn-danger"
                                >Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

