<%- include('../partials/head.ejs') %>
<%- include('../partials/menu.ejs') %>
<br>
<div class="container">
    <a href="/services/novo" class="btn btn-primary">Novo Serviço</a>
    <br>
    <div class="card">
        <div class="card-header">
            Serviços Cadastrados
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <th>Descrição</th>
                    <th>Valor</th>
                </thead>
                <tbody>
                    <% services.forEach(service => { %>
                        <tr>
                            <td><%= service.descricao %></td>
                            <td><%= service.valor %></td>
                            <td>
                                <a 
                                    href="/services/editar/<%= service.id %>" 
                                    class="btn btn-primary"
                                >Editar</a>
                                <a 
                                    href="/services/excluir/<%= service.id %>" 
                                    class="btn btn-danger"
                                >Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>